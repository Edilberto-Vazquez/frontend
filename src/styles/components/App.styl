*
  box-sizing: border-box
  margin: 0
  padding: 0

body
  margin: 20px
  background-color white

#app
  display: grid
  grid-template-rows: repeat(5, 1fr)
  grid-template-columns: repeat(2, 1fr)
  grid-row-gap: 10px
  grid-column-gap: 10px

section
  width: 100%
  height: auto
  padding: 10px 10px
  display: grid
  border-radius: 10px
  background: #244b90
